.favourite-access-navigation
  overflow hidden

  // li
  //   display none
  //   // span(3/12)
  //
  //   &:first-of-type
  //     display block


  .favourite

    display block
    width 100%
    height 300px

    &.fav-1
      background-color #e93e0a
    &.fav-2
      background-color #16db3d
    &.fav-3
      background-color #e207bb

@media only screen and (min-resolution: 1.5dppx) and (max-device-width: mobile-landscape),
  only screen and (-webkit-min-device-pixel-ratio: 1.5) and (max-device-width: mobile-landscape),
  only screen and (min--moz-device-pixel-ratio: 1.5) and (max-device-width: mobile-landscape),
  only screen and (min-resolution: 144dpi) and (max-device-width: mobile-landscape)
    .favourite-access-navigation .favourite
      height 600px

.swiper-container, .swiper-slide
  width 100%
